<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<!-- APP ---->
	<app title="FlxMenu Example" file="FlxMenuExample" main="Main" version="0.3.0" company="JohnDimi" />
	<app preloader="flixel.system.FlxBasePreloader"/>
	
	<!-- WINDOW SETTINGS- --->
	<!--These window settings apply to all targets-->
	<window width="640" height="480" fps="60" background="#000000" hardware="true" vsync="true" />
	
	<!-- PATHS ----------------->
	<classpath name="source" />
	<set name="BUILD_DIR" value="build/debug/" if="debug"/>
	<set name="BUILD_DIR" value="build/release/" unless="debug"/>
	<assets path="assets" exclude="*.ase|thumbs.db|*.wav|#_*|*.ogg"/>

	<!-- DJFLIXEL -------------->
	
	<!-- Go ahead and include all the icon sets -->
	<set name="DJFLX_ICONS_8"/> 
	<set name="DJFLX_ICONS_12"/> 
	<set name="DJFLX_ICONS_16"/> 
	<set name="DJFLX_ICONS_24"/> 
	
	<!-- Reload some external files without recompiling, just press F12 -->
	<haxedef name="EXTERNAL_LOAD"/>

	<!-- FLIXEL ---------------->
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN"/> 
	
	<!-- LIBRARIES ------------->
	<haxelib name="flixel"/>
	<haxelib name="djFlixel"/>
	
	<!-- Note: 	Many common defines are being declared in the "djflixel/source/include.xml" file
				This is to save space and streamline the project.xml file a bit -->
	
</project>
